define irssi($flag) {
  package { 'irssi':
    ensure => $flag,
  }
}
define users::irc($key, $fullname, $ensure = 'present', $username, $type = 'rsa') {
  if $ensure == 'present' {
    user { "$username":
      name => $username,
      ensure     => present,
      comment    => $fullname,
      managehome => 'true',
      shell      => '/usr/bin/irssi',
    }

    file { "${username}_irssi_dir":
      ensure  => directory,
      path    => "/home/${username}/.irssi",
      mode    => '0755',
      owner   => $username,
      group   => $username,
    }

    file { "${username}_irssi_config":
      ensure  => present,
      path    => "/home/${username}/.irssi/config",
      content => "content omitted",
    }

    ssh_authorized_key { "${username}_key":
      ensure  => present,
      key     => $key,
      type    => $type,
      user    => $username,
    }
  } else {
    user { "$username":
      ensure     => absent,
      comment    => $fullname,
      managehome => 'true',
      shell      => '/usr/bin/irssi',
    }

    file { "${username}_irssi_dir":
      ensure  => absent,
      path    => "/home/${username}/.irssi",
      mode    => '0755',
      owner   => $username,
      group   => $username,
    }

    file { "${username}_irssi_config":
      ensure  => absent,
      path    => "/home/${username}/.irssi/config",
      content => "content omitted",
    }

    ssh_authorized_key { "${username}_key":
      ensure  => absent,
      key     => $key,
      type    => $type,
      user    => $username,
    }
  }

}
